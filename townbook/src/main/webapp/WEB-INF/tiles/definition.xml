  <definition name="event.management" extends="baseLayout">
    <put-attribute name="body" value="/WEB-INF/views/event/management/body.jsp" />
    <put-attribute name="controllers" value="/WEB-INF/views/event/management/controllers.jsp" />
  </definition>

  <definition name="event.registration" extends="baseLayout">
    <put-attribute name="body" value="/WEB-INF/views/event/registration.jsp" />
  </definition>

